SELECT COUNT(*) FROM movie_info mi,title t,movie_keyword mk,movie_info_idx mi_idx WHERE t.id=mi.movie_id AND t.kind_id=1 AND t.production_year>2010 AND mi.info_type_id=8 AND t.id=mk.movie_id AND t.kind_id=1 AND t.production_year>2010 AND t.id=mi_idx.movie_id AND t.kind_id=1 AND t.production_year>2010 AND mi_idx.info_type_id=101;