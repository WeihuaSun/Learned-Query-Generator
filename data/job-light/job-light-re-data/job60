SELECT COUNT(*) FROM title t,movie_info_idx mi_idx,movie_keyword mk,cast_info ci WHERE t.id=mk.movie_id AND t.kind_id=1 AND t.production_year>2000 AND t.id=ci.movie_id AND t.kind_id=1 AND t.production_year>2000 AND t.id=mi_idx.movie_id AND t.kind_id=1 AND t.production_year>2000 AND mi_idx.info_type_id=101;