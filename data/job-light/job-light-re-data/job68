SELECT COUNT(*) FROM cast_info ci,movie_info_idx mi_idx,movie_keyword mk,movie_info mi,title t WHERE t.id=mi.movie_id AND t.production_year>2000 AND mi.info_type_id=3 AND t.id=mi_idx.movie_id AND t.production_year>2000 AND mi_idx.info_type_id=100 AND t.id=ci.movie_id AND t.production_year>2000 AND t.id=mk.movie_id AND t.production_year>2000;