SELECT COUNT(*) FROM cast_info ci,movie_companies mc,movie_keyword mk,movie_info mi,title t WHERE t.id=mi.movie_id AND t.production_year>2000 AND mi.info_type_id=16 AND t.id=mc.movie_id AND t.production_year>2000 AND t.id=ci.movie_id AND t.production_year>2000 AND ci.role_id=2 AND t.id=mk.movie_id AND t.production_year>2000;