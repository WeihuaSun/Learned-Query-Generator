SELECT COUNT(*) FROM movie_info_idx mi_idx,movie_companies mc,movie_keyword mk,movie_info mi,title t WHERE t.id=mi.movie_id AND t.production_year>2000 AND mi.info_type_id=8 AND t.id=mk.movie_id AND t.production_year>2000 AND t.id=mi_idx.movie_id AND t.production_year>2000 AND mi_idx.info_type_id=101 AND t.id=mc.movie_id AND t.production_year>2000;